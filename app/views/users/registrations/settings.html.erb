<div class="d-flex flex-column align-items-center">
<h2>Update My Account Settings</h2>
<br>
<br>

<%= form_for(resource, as: resource_name, url: settings_path, html: { method: :put }) do |f| %>  
  <div class="field">
    <%= f.label :email, {class: "form-label"} %>
    <br />
    <%= f.email_field :email, {class: "form-control"} %>
  </div>
  <br>

  <% if @user.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= @user.unconfirmed_email %></div>
  <% end %>
  <br>

  <div class="field">
    <%= f.label :password, "New password", {class: "form-label"} %> 
    <br />
    <%= f.password_field :password, {class: "form-control"} %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>
  <br>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password", {class: "form-label"} %>
    <br />
    <%= f.password_field :password_confirmation, {class: "form-control"} %>
  </div>
  <br>

  <div class="field">
    <%= f.label :current_password, {class: "form-label"} %> 
    <br />
    <%= f.password_field :current_password, {class: "form-control"} %>
  </div>
  <br>
  <br>

  <div class="actions">
    <%= f.submit "Update my Account", {class: "btn btn-primary"} %>
  </div>
  <br>
  <br>
<% end %>

<p>Unhappy? <%= button_to "Cancel my account", user_registration_path(@user), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-secondary" %></p>
</div>
<br>
<%= link_to "Back", :back %>
