<div class="d-flex flex-column align-items-center">
<h2>Update My Account</h2>
<br>
<br>

<%= form_for(resource, as: resource_name, url: settings_path, html: { method: :put, class: "row" }) do |f| %>  
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="field col-12">
    <%= f.label :email, {class: "form-label, label"} %>
    <br />
    <%= f.email_field :email, {class: "form-control"} %>
  </div>
  <br>

  <% if resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <br>

  <div class="field col-12">
    <%= f.label :password, "New password", {class: "form-label, label"} %> 
    <br />
    <%= f.password_field :password, {class: "form-control"} %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>
  <br>

  <div class="field col-12">
    <%= f.label :password_confirmation, "Confirm new password", {class: "form-label, label"} %>
    <br />
    <%= f.password_field :password_confirmation, {class: "form-control"} %>
  </div>
  <br>

  <div class="field col-12">
    <%= f.label :current_password, {class: "form-label, label"} %> 
    <br />
    <%= f.password_field :current_password, {class: "form-control"} %>
  </div>
  <br>
  <br>

  <div class="actions">
    <%= f.submit "Update my Account", {class: "btn btn-primary"} %>
  </div>
  <br>
  <br>
<% end %>
</div>

<div class="row col-12 mt-5">
  <p>Unhappy with us? We're sad to see you go. 
  <%= button_to "Cancel my Account", user_registration_path(resource), data: { confirm: "Are you sure you want to delete your account?" }, method: :delete, class: "btn btn-secondary" %></p>
</div>
