<div class="d-flex flex-column align-items-center justify-content-center h-100">
<div class='mb-3'>
  <img src="https://gcdnb.pbrd.co/images/WTB3Qbaoxmnr.png?o=1" width="400px" height=auto>
</div>
<h2>Sign up for an account.</h2>
<br>
<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'row'}) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field col-12">
    <%= f.label :email, "Email Address", {class: "form-label, label"} %>
    <br>
    <%= f.email_field :email, {class: "form-control"} %>
  </div>
  <br>
  
  <div class="field col-md-6">
    <%= f.label :first_name, "First Name", {class: "form-label, label"} %>
    <br>
    <%= f.text_field :first_name, {class: "form-control"} %>
  </div>
  <br>

  <div class="field col-md-6">
    <%= f.label :last_name, "Last Name", {class: "form-label, label"} %>
    <br>
    <%= f.text_field :last_name, {class: "form-control"} %>
  </div>
  <br>

  <div class="field col-md-6">
    <%= f.label :birthday, "Birthday", {class: "form-label, label"} %>
    <br>
    <%= f.date_field :birthday, {class: "form-control"} %>
  </div>
  <br>

  <div class="field col-md-6">
    <%= f.label :mobile, "Mobile No.", {class: "form-label, label"} %>
    <br>
    <%= f.text_field :mobile, {class: "form-control"} %>
  </div>
  <br>

  <div class="field col-md-6">
    <%= f.label :password, {class: "form-label, label"} %>
    <br>
    <%= f.password_field :password, {class: "form-control"} %>
  </div>
  <br>

  <div class="field col-md-6">
    <%= f.label :password_confirmation, "Password Confirmation", {class: "form-label, label"} %>
    <br>
    <%= f.password_field :password_confirmation, {class: "form-control"} %>
  </div>
  
  <div class="actions mt-3">
    <%= f.submit "Sign Up", {class: "btn btn-primary"} %>
  </div>
<% end %>
<br>
<%= render "users/shared/links" %>
</div>


