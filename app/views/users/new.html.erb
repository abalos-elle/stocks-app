<div class="d-flex flex-column align-items-center">
<h2>Add a Trader Account</h2>
<br>
<br>

<%= form_for(@user, :html => {class: "row"}) do |f| %>  
  <div class="field col-md-12">
    <%= f.label :email, "Email Address", {class: "form-label, label"} %>
    <br />
    <%= f.email_field :email, {class: "form-control"} %>
  </div>
  <br>

  <div class="field col-md-4">
    <%= f.label :first_name, "First Name", {class: "form-label, label"} %>
    <br />
    <%= f.text_field :first_name, {class: "form-control"} %>
  </div>
  <br>

  <div class="field col-md-4">
    <%= f.label :middle_name, "Middle Name (optional)", {class: "form-label, label"} %>
    <br />
    <%= f.text_field :middle_name, {class: "form-control"} %>
  </div>
  <br>

  <div class="field col-md-4">
    <%= f.label :last_name, "Last Name", {class: "form-label, label"} %>
    <br />
    <%= f.text_field :last_name, {class: "form-control"} %>
  </div>
  <br>

  <div class="field col-md-6">
    <%= f.label :birthday, "Birthday", {class: "form-label, label"} %>
    <br />
    <%= f.date_field :birthday, {class: "form-control"} %>
  </div>
  <br>

  <div class="field col-md-6">
    <%= f.label :mobile, "Mobile No.", {class: "form-label, label"} %>
    <br />
    <%= f.text_field :mobile, {class: "form-control"} %>
  </div>
  <br>

  <div class="field col-md-6">
    <%= f.label :password, {class: "form-label, label"} %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, {class: "form-control"} %>
  </div>
  <br>

  <div class="field col-md-6">
    <%= f.label :password_confirmation, "Password Confirmation", {class: "form-label, label"} %>
    <br />
    <%= f.password_field :password_confirmation, {class: "form-control"} %>
  </div>
  <br>

  <% if logged_in?(:admin) %>
    <div class="field col-md-12">
        <%= f.label :roles, "User Type", {class: "form-label, label"} %>
        <br />
        <%= f.select :roles, [["Administrator", "admin"], ["Trader", "trader"]], {}, {multiple: true, class: "form-control"} %>
    </div>
    <br>
    <br>
  <% end %>

  <div class="actions mt-2">
    <%= f.submit "Create a New Trader Account", {class: "btn btn-primary"} %>
  </div>
<% end %>
