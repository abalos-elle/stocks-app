<h2>Edit Trader Info</h2>

<%= form_for(user) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :first_name, "First Name" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first-name" %>
  </div>

  <div class="field">
    <%= f.label :middle_name, "Middle Name (optional)" %><br />
    <%= f.text_field :middle_name, autofocus: true, autocomplete: "middle-name" %>
  </div>

  <div class="field">
    <%= f.label :last_name, "Last Name" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last-name" %>
  </div>

  <div class="field">
    <%= f.label :birthday, "Birthday" %><br />
    <%= f.date_field :birthday, autofocus: true, autocomplete: "birthday" %>
  </div>

  <div class="field">
    <%= f.label :mobile, "Mobile No." %><br />
    <%= f.text_field :mobile, autofocus: true, autocomplete: "mobile" %>
  </div>

  <% if logged_in?(:admin) %>
  <div class="field">
    <%= f.label :roles, "User Type" %><br />
    <%= f.select :roles, [["Administrator", "admin"], ["Trader", "trader"]], {}, {multiple: true} %>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update Trader Profile" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
