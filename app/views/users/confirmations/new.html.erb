<div class="d-flex flex-column align-items-center justify-content-center h-100">
<div class='mb-3'>
  <img src="https://gcdnb.pbrd.co/images/WTB3Qbaoxmnr.png?o=1" width="400px" height=auto>
</div>
<h2>Resend Confirmation Instructions</h2>
<br>
<br>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "row" }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field col-md-3">
  </div>

  <div class="field col-md-6">
    <%= f.label :email, {class: "form-label, label"} %>
    <br>
    <%= f.email_field :email, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control" %>
  </div>

  <div class="field col-md-3">
  </div>

  <div class="actions mt-3">
    <%= f.submit "Resend confirmation instructions", class: "btn btn-primary" %>
  </div>
  <% end %>
  <br>
  <%= render "users/shared/links" %>
  </div>



