<h2>Owned Stocks </h2>

<table class="table table-primary table-striped table-hover">
  <thead>
    <tr class="table-primary">
      <th>Name</th>
      <th>Symbol</th>
      <th>Qty.</th>
      <th>Current Price</th>
      <th>Total</th>      
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @owned_stocks.each do |stock| %>
      <tr>
        <td class="table-primary">
          <%= stock.company.name %>
        </td>
        <td class="table-primary">
          <%= stock.company.ticker     %>
        </td>
         <td class="table-primary">
          <%= stock.quantity     %>
        </td>
        <td class="table-primary">
          <%= number_to_currency_p(Company.find(stock.company_id).latest_price) %>
        </td>
        <td class="table-primary">
          <%= number_to_currency_p(Company.find(stock.company_id).latest_price * stock.quantity) %>
        </td>
        <td class="table-primary">
          <%# Types: 1 - Buy, 2 - Sell %>
          <%= link_to "Buy", new_transaction_path(:type => 1, :company_id => stock.company.id), {:remote => true, class: 'btn btn-primary btn-sm'} %> 
          <%= link_to 'Sell', new_transaction_path(:type => 2, :stock => stock.id),  {:remote => true, class: 'btn btn-primary btn-sm'}  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>