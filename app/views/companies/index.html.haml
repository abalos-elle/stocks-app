%h2 Home

%h2 Companies

%table
    %thead
        %tr
            %th Name
            %th Symbol
            %th Price
            %th Percent Change
    %tbody
        - @companies.each do |cmp|
            %tr
                %td= link_to cmp.name, company_path(cmp)
                %td= cmp.ticker    
                %td= 300 #PriceService.fetch_quote(cmp.ticker).output["Global Quote"]["05. price"]
                %td= "10%" #PriceService.fetch_quote(cmp.ticker).output["Global Quote"]["10. change percent"]